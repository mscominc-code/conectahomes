function money12(plan: Plan, includeHidden: boolean) {
  return includeHidden ? calc12moTotal(plan) : plan.promoPrice * 12;
}

function norm(x: number, min: number, max: number) {
  return max === min ? 0.5 : (x - min) / (max - min);
}

function scorePlan(p: Plan, plans: Plan[], includeHidden: boolean, scenario: Scenario) {
  const speeds = plans.map((x) => x.downloadMbps);
  const costs = plans.map((x) => money12(x, includeHidden));

  const sMin = Math.min(...speeds);
  const sMax = Math.max(...speeds);
  const cMin = Math.min(...costs);
  const cMax = Math.max(...costs);

  const s = norm(p.downloadMbps, sMin, sMax);               // ë†’ì„ìˆ˜ë¡ ì¢‹ìŒ
  const c = norm(money12(p, includeHidden), cMin, cMax);    // ë‚®ì„ìˆ˜ë¡ ì¢‹ìŒ â†’ (1-c)

  // ì‹œë‚˜ë¦¬ì˜¤ë³„ ê°€ì¤‘ì¹˜ (ì „í™˜ ê´€ì  ê¸°ë³¸ê°’)
  const w =
    scenario === "student"
      ? { cost: 0.75, speed: 0.25 } // ìœ í•™ìƒ: ê°€ê²© ë¯¼ê°
      : scenario === "family"
      ? { cost: 0.60, speed: 0.40 } // ê°€ì¡±: ë°¸ëŸ°ìŠ¤
      : { cost: 0.35, speed: 0.65 }; // ê²Œì´ë¨¸: ì†ë„/ì„±ëŠ¥

  return (1 - c) * w.cost + s * w.speed;
}

function pickTop3(plans: Plan[], includeHidden: boolean, scenario: Scenario) {
  const list = [...plans];

  // ì—­í•  1) ê°€ì„±ë¹„: 12ê°œì›” ë¹„ìš© ìµœì†Œ
  const byCheap = [...list].sort((a, b) => money12(a, includeHidden) - money12(b, includeHidden));

  // ì—­í•  2) ì‹œë‚˜ë¦¬ì˜¤ ì¶”ì²œ: ê°€ì¤‘ì¹˜ ì ìˆ˜ ìµœëŒ€
  const byScenario = [...list].sort(
    (a, b) => scorePlan(b, list, includeHidden, scenario) - scorePlan(a, list, includeHidden, scenario)
  );

  // ì—­í•  3) ì´ˆê³ ì†: ì†ë„ ìµœëŒ€ (ê²Œì´ë¨¸ íƒ­ì—ì„œ íŠ¹íˆ ì„¤ë“ë ¥)
  const byFast = [...list].sort((a, b) => b.downloadMbps - a.downloadMbps);

  // ì¤‘ë³µ ë°©ì§€
  const chosen = new Set<string>();
  const pickUnique = (arr: Plan[]) => {
    for (const p of arr) {
      if (!chosen.has(p.id)) {
        chosen.add(p.id);
        return p;
      }
    }
    return arr[0]!;
  };

  const cheap = pickUnique(byCheap);
  const scen = pickUnique(byScenario);
  const fast = pickUnique(byFast);

  const scenLabel =
    scenario === "student" ? "ìœ í•™ìƒ ì¶”ì²œ" : scenario === "family" ? "ê°€ì¡± ì¶”ì²œ" : "ê²Œì´ë¨¸ ì¶”ì²œ";

  return [
    { role: "ê°€ì„±ë¹„ TOP", plan: cheap },
    { role: `${scenLabel} TOP`, plan: scen },
    { role: "ì´ˆê³ ì† TOP", plan: fast },
  ];
}

